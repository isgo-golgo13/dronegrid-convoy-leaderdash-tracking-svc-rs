# Production Environment
# Source: config/.env.prod

SERVER_ADDR=0.0.0.0:8080
RUST_LOG=warn,drone_graphql_api=info,drone_persistence=info

SCYLLA_HOSTS=scylla-node1:9042,scylla-node2:9042,scylla-node3:9042
SCYLLA_KEYSPACE=drone_ops
SCYLLA_DATACENTER=dc1
SCYLLA_POOL_SIZE=8
SCYLLA_CONNECTION_TIMEOUT_MS=10000
SCYLLA_REQUEST_TIMEOUT_MS=30000

REDIS_URL=redis://redis-cluster:6379
REDIS_POOL_SIZE=16

ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false
MAX_QUERY_DEPTH=10
MAX_QUERY_COMPLEXITY=1000

CACHE_TTL_LEADERBOARD=300
CACHE_TTL_DRONE_STATE=60
CACHE_TTL_TELEMETRY=10

METRICS_ENABLED=true
TRACING_ENABLED=true
TRACING_ENDPOINT=http://jaeger:4317

DUCKDB_PATH=/var/data/analytics.duckdb
ANALYTICS_EXPORT_DIR=/var/data/exports