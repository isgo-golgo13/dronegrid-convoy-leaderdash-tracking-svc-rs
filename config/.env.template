# ==============================================================================
# Drone Convoy Tracker - Environment Configuration
# ==============================================================================
# Copy this file to .env and customize for your environment
# ==============================================================================

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
SERVER_ADDR=0.0.0.0:8080
RUST_LOG=info,drone_graphql_api=debug,drone_persistence=debug

# ------------------------------------------------------------------------------
# ScyllaDB Configuration
# ------------------------------------------------------------------------------
SCYLLA_HOSTS=localhost:9042
SCYLLA_KEYSPACE=drone_ops
SCYLLA_USERNAME=
SCYLLA_PASSWORD=
SCYLLA_DATACENTER=datacenter1

# Connection pool
SCYLLA_POOL_SIZE=4
SCYLLA_CONNECTION_TIMEOUT_MS=5000
SCYLLA_REQUEST_TIMEOUT_MS=12000

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=8

# Cache TTLs (seconds)
CACHE_TTL_LEADERBOARD=300
CACHE_TTL_DRONE_STATE=60
CACHE_TTL_TELEMETRY=10

# ------------------------------------------------------------------------------
# GraphQL Configuration
# ------------------------------------------------------------------------------
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
MAX_QUERY_DEPTH=10
MAX_QUERY_COMPLEXITY=1000

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8080
WS_BASE_URL=ws://localhost:8080

# ------------------------------------------------------------------------------
# Analytics (DuckDB)
# ------------------------------------------------------------------------------
DUCKDB_PATH=./data/analytics.duckdb
ANALYTICS_EXPORT_DIR=./data/exports

# ------------------------------------------------------------------------------
# Simulator Configuration
# ------------------------------------------------------------------------------
SIMULATOR_TICK_MS=1000
SIMULATOR_DEFAULT_DRONES=4
SIMULATOR_MISSION_DURATION=300

# ------------------------------------------------------------------------------
# Observability
# ------------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_ENDPOINT=http://localhost:4317